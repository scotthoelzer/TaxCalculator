private void jButtonCalcActionPerformed(java.awt.event.ActionEvent evt) {
    double taxPerc, purchAmt;
    final int perc = 100;
    
    //allows for proper display of currency values    
    NumberFormat currencyFormatter = NumberFormat.getCurrencyInstance();
    
    //gets the purchase amount from the Purchase Amount text field and converts
    //to double for calculations
    purchAmt = Double.parseDouble(jTextFieldPurchAmt.getText());
    
    //gets value of sales tax from slider and converts to decimal for calculations
    taxPerc = (jSliderTax.getValue())/(double)perc;
    
       
    //calculates tax amount and displays result in jTextFieldTaxAmt
    jTextFieldTaxAmt.setText(currencyFormatter.format(purchAmt * taxPerc).toString());
}

